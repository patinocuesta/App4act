<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now on Main Activity"/>
    <Button
        android:id="@+id/buttonActivity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonChangeActivity"
        android:text="Go to Activity 2"/>
    <Button
        android:id="@+id/buttonActivity3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonChangeActivity"
        android:text="Go to Activity 3"/>
    <Button
        android:id="@+id/buttonActivity4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonChangeActivity"
        android:text="Go to Activity 4"/>
</LinearLayout>